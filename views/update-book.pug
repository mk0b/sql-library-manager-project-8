doctype html
head
  title=book.title
  link(rel='stylesheet' href='../public/stylesheets/style.css')
h1 Update Book
form(action=`/books/${book.id}`, method="post")
  include form
  p
    input(type='submit' value='Update Book')
  p
    a.button(href='/books') Cancel
p
    a.button(href=`/books/${book.id}/delete`) Delete Book